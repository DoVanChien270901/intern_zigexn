<div class="list-city-content container-fluid">
  <div class="city-list row">
    <a class="btn btn-outline-danger col-5 btn-lg" href="#cities_vietnam">Viet Nam</a> 
    <div class="col-2"></div>
    <a class="btn btn-outline-danger col-5 btn-lg" href="#cities_international">International</a> 
  </div>
  <div class="cities-vietnam" id="cities_vietnam">
    <h4>Viet Nam</h4>
    <div class="row">
      <% @cities_vietnam.each do |item| %> 
        <div class="city-vietnam-item col-3">
          <div class="col-12 card mt-3">
            <div class="card-body">
              <%= link_to item.name, "/jobs/city/#{item.name}"%>
            </div>
            <div class="card-footer">
              <%= link_to "Total #{item.count_job} jobs", "/jobs/city/#{item.name}"%>
            </div>
          </div> 
        </div>
      <% end %> 
    </div>
  </div>
  <div class="cities-international" id="cities_international">
    <h4>International</h4>
    <div class="row">
      <% @cities_international.each do |item| %> 
        <div class="city-vietnam-item col-3">
          <div class="col-12 card">
            <div class="card-body">
              <%= link_to item.name, "/jobs/city/#{item.name}"%>
            </div>
            <div class="card-footer">
              <%= link_to "Total #{item.count_job} jobs", "/jobs/city/#{item.name}"%>
            </div>
          </div> 
        </div>
      <% end %> 
    </div>
  </div>
</div>
</div>
