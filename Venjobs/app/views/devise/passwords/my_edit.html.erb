<div class="forgot-password-content">
  <div class="form-content">
    <h3 class="text-center">Change your password</h3>
    <%= simple_form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, data: {turbo: false} do |f| %>
      <%= f.hidden_field :reset_password_token %>
      <%= f.input :email, readonly: true %> 
      <%= f.input :password, error: f.error(:encrypted_password)%> 
      <%= f.input :password_confirmation, error: f.error(:password_confirmation)%> 
      <div class="mb-3">
        <%= f.submit "Change my password", class: 'btn btn-outline-primary' %>
      </div>
    <% end %>
  </div>
</div>
